<% layout("/listings/layouts/boilerplate") %> 

<style>
    .filters{
        display: flex;
        flex-wrap: wrap;   
        align-items: center;
        
    }
    .filter{
        text-align: center;
        margin-left: 2rem;
        margin-top: 2rem;
        margin-bottom: 0.5rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .taxinfo{
      display: none; 
    }
    .tax-togle{
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.1rem;
      padding: 1rem;
      margin-left: 2rem;
      display: flex;
      align-items: center;
    }
</style>
 
 <div class="filters">

      <div class="filter" id="trending">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>costel</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-wheat-awn"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-industry"></i></div>
        <p>Industry</p>
      </div> 
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>costel</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Forest</p>
      </div>
      <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div> 

      <div class="tax-togle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Total Before Taxes</label>
          </div>
      </div>

 </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 justify-content-center">
        <% for(let data of allListings){ %> 
            <div class="col mb-4">
                <div class="card card-listing h-10 ">
                   <a href="/listings/<%= data._id %>"><img src="<%= data.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;"></a> 
                    <div class="card-body">
                        <p class="card-text">
                            <b><a href="/listings/<%= data._id %>"><%= data.title %></a></b> <br>
                            <i class="fa-solid fa-indian-rupee-sign"></i><%= data.price %>/night
                            <i class="taxinfo">+18% GST</i>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

<script>
    let taxswich=document.getElementById("flexSwitchCheckDefault");
    taxswich.addEventListener("click",()=>{
        console.log("hello");
        let taxinfo=document.getElementsByClassName("taxinfo");
        for(info of taxinfo){
          if(info.style.display != "inline"){
            info.style.display="inline";
          }else{
            info.style.display="none";
          }
        }
    });

    
  document.getElementById("trending").addEventListener('click', function() {
    fetch('/listings/trending', {
      method: 'POST',
      headers: {
        'Content-Type': 'text/plain'
      },
      body: '4'
    })
  
  });

</script>

